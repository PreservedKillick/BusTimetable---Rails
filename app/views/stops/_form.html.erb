<%= render("layouts/errors", :object => @stop) %>

<%= form_for(@stop) do |f| %>

  <div class="form-group">
    <%= f.collection_select(:station_id, Station.all, :id, :name) %>
  </div>

  <div class="form-group">
    <%= f.collection_select(:bus_line_id, BusLine.all, :id, :name) %>
  </div>

  <%= f.submit(:class => "btn btn-primary") %>

<% end %>
